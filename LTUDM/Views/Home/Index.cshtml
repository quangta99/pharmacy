@{
    ViewBag.Title = "Trang chủ";
    int i = 0;
    int j = 0;
}


@model List<LTUDM.Models.ProductModel>
<div class="container col-lg-12" style="margin-top:60px">
    <div class="row">
        <div id="slides" class="carousel col-lg-9 col-sm-9 col-xs-9 pt-1" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#slides" data-slide-to="0" class="active"></li>
                <li data-target="#slides" data-slide-to="1"></li>
                <li data-target="#slides" data-slide-to="2"></li>

            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img src="~/Banner/@ViewBag.Banner[0].Img" class="img-banner" alt="@ViewBag.Banner[0].BannerName">
                </div>
                <div class="carousel-item">
                    <img src="~/Banner/@ViewBag.Banner[1].Img" class="img-banner" alt="@ViewBag.Banner[1].BannerName">
                </div>
                <div class="carousel-item">
                    <img src="~/Banner/@ViewBag.Banner[2].Img" class="img-banner" alt="@ViewBag.Banner[2].BannerName">
                </div>

            </div>
            <a class="carousel-control-prev" href="#slides" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#slides" data-slide="next">
                <span class="carousel-control-next-icon"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="col-lg-3 col-sm-3 col-xs-3 d-flex justify-content-between flex-sm-column">
            <div class="banner pt-1">
                <a class="">
                    <img class="img-fluid" src="https://inchatluongviet.vn/wp-content/uploads/2018/08/banner-2-2.jpg" />
                </a>
            </div>
            <div class="banner pt-1">
                <a class="">
                    <img class="img-fluid" src="https://inchatluongviet.vn/wp-content/uploads/2018/08/banner-2-2.jpg" />
                </a>
            </div>
        </div>
    </div>
</div>
<div class="container col-lg-12 bg-light" style="margin-top:15px;">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3>Sản phẩm giảm giá</h3>
        </div>
    </div>
    <div class="row" style="margin-top:15px;">
        @foreach (var item in Model)
        {
            if (i == 5)
            {
                break;
            }
            if (item.Quantity > 0 && item.status == true && item.discount > 0)
            {
                <div class="col-lg-3 col-md-4 px-2 my-2 col-xs-6 col-sm-4 col-6">
                    <div class="card text-black">
                        <a>
                            <img class="card-img-top" src="@item.img[0]" />
                        </a>
                        <div class="card-body">
                            <div class="product-name text-center">
                                <h5>@item.ProductName</h5>
                            </div>
                            <div class="text-center row text-center sale justify-content-center">
                                @if (item.discount > 0)
                                {
                                    <h6 class="col-md-8 col-sm-7 col-xs-8 col-7 d-flex align-items-center justify-content-center">@string.Format("{0:0,0 VNĐ}", item.Price)</h6>
                                    <h6 class="col-md-4 col-sm-5 col-xs-4 col-5 text-warning">-@item.discount%</h6>
                                }
                                else
                                {
                                    <div class="col-6 row justify-content-center text-center">
                                        <h6>@string.Format("{0:0,0 VNĐ}", item.Price)</h6>
                                    </div>
                                }
                            </div>
                            <div class="row justify-content-center">
                                <button class="btn btn-primary col-lg-5 col-md-5 col-sm-5 col-xs-5 col-5 p-2 m-1" style="font-size:14px" onclick="window.location='@Url.Action("ProductDetail", "Product", new { id = item.ProductID })'">Xem</button>
                                <button class="btn btn-danger col-lg-5 col-md-5 col-sm-5 col-xs-5 col-5 p-2 m-1" style="font-size:14px" onclick="window.location='@Url.Action("Buy", "Cart", new { id = item.ProductID, @strUrl = Request.Url.ToString() })'">Thêm</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            i = i + 1;
}
    </div>
    <div class="justify-content-center" style="display:flex">
        <a href="@Url.Action("Product","Product")" class="btn btn-primary m-3">Xem tất cả sản phẩm</a>
    </div>
</div>
