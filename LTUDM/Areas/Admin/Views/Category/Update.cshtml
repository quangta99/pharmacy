
@{
    ViewBag.Title = "updatecategory";
    Layout = "~/Areas/Admin/Views/Shared/_Layou1.cshtml";
    @model LTUDM.Models.CategoryModel
}



<div id="content" class="span10">

    @using (Html.BeginForm("Update2", "Category", FormMethod.Post))
    {
        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon white edit"></i><span class="break"></span>Update Category</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form class="form-horizontal">
                        <fieldset>

                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>ID</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control disabled" style="width:500px" name="ID" value="@Model.CategoryID" readonly placeholder="@Model.CategoryID">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Tên</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" style="width:500px" name="name" placeholder="@Model.CategoryName">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-primary">Thay đổi</button>
                                </div>
                            </div>

                        </fieldset>
                    </form>

                </div>
            </div><!--/span-->

        </div><!--/row-->
    }
</div>
