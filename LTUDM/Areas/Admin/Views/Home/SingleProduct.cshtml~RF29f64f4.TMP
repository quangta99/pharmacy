
@{
    ViewBag.Title = "SingleProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layou1.cshtml";
}

<div class="container body-content">
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">

                <div class="col-md-12 mb-0">
                    <a href="index.html">Home</a> <span class="mx-2 mb-0">/</span> <a href="shop.html">Store</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Ibuprofen Tablets, 200mg</strong>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section">
        <div class="container">
            <div class="row">


                <div class="col-md-5 mr-auto">
                    <div class="border text-center">
                        <img src="http://@ViewBag.SPr.Imgs[0].ImgName" alt="Image" class="img-fluid p-5">
                    </div>
                </div>
                <div class="col-md-6">
                    <h1>@ViewBag.SPr.ProductCode</h1>
                    <h2 class="text-black">@ViewBag.SPr.ProductName</h2>
                    <div>@ViewBag.SPr.Des</div>


                    <p><strong class="text-primary h4">@ViewBag.SPr.Price VND</strong></p>




                    <p><a class="buy-now btn btn-sm height-auto px-4 py-3 btn-primary" href="@Url.Action("Buy","Cart",new { id =@ViewBag.SPr.ProductCode, @strUrl= Request.Url.ToString()})">Thêm vào giỏ hàng</a></p>
                    <div class="mt-5">
                        <ul class="nav nav-pills mb-3 custom-pill" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
                                   aria-controls="pills-home" aria-selected="true">Thông tin thuốc</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"
                                   aria-controls="pills-profile" aria-selected="false">Thông số</a>
                            </li>

                        </ul>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                                <table class="table custom-table">
                                    <thead>
                                    <th>Mã</th>
                                    <th>Mô tả</th>
                                    <th>Packaging</th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">OTC022401</th>
                                            <td>Pain Management: Acetaminophen PM Extra-Strength Caplets, 500 mg, 100/Bottle</td>
                                            <td>1 BT</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">OTC022401</th>
                                            <td>Pain Management: Acetaminophen PM Extra-Strength Caplets, 500 mg, 100/Bottle</td>
                                            <td>144/CS</td>
                                        </tr>
                                        <tr>
                                            <th scope="row">OTC022401</th>
                                            <td>Pain Management: Acetaminophen PM Extra-Strength Caplets, 500 mg, 100/Bottle</td>
                                            <td>1 EA</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

                                <table class="table custom-table">

                                    <tbody>
                                        <tr>
                                            <td>HPIS CODE</td>
                                            <td class="bg-light">999_200_40_0</td>
                                        </tr>
                                        <tr>
                                            <td>HEALTHCARE PROVIDERS ONLY</td>
                                            <td class="bg-light">No</td>
                                        </tr>
                                        <tr>
                                            <td>LATEX FREE</td>
                                            <td class="bg-light">Yes, No</td>
                                        </tr>
                                        <tr>
                                            <td>MEDICATION ROUTE</td>
                                            <td class="bg-light">Topical</td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>


                </div>
                }
            </div>
        </div>
    </div>

    <div class="site-section bg-secondary bg-image" style="background-image: url('/asset/images/bg_2.jpg');">
        <div class="container">
            <div class="row align-items-stretch">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/asset/images/bg_1.jpg');">
                        <div class="banner-1-inner align-self-center">
                            <h2>Hệ thống nhà thuốc Pharma</h2>
                            <p>
                                Cung cấp dược phẩm, thực phẩm chức năng trên toàn quốc
                            </p>
                        </div>
                    </a>
                </div>
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <a href="#" class="banner-1 h-100 d-flex" style="background-image: url('/asset/images/bg_2.jpg');">
                        <div class="banner-1-inner ml-auto  align-self-center">
                            <h2>Được tư vấn bởi chuyên gia</h2>
                            <p>
                                Liên hệ với chúng tôi để được tư vấn
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

