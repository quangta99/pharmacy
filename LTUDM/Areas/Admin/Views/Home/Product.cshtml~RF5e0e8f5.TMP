@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layou1.cshtml";
    @model List<LTUDM.Models.ProductModel>
    int stt = 1;
}


<div id="content" class="span10">
    <div class="row-fluid">

        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <i>Home</i>
                <i class="icon-angle-right"></i>
            </li>
            <li><p>Tất cả Sản Phẩm</p></li>
        </ul>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon white user"></i><span class="break"></span>Sản phẩm</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                        <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                    </div>  
                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Số Lượng</th>
                                <th>Giá</th>
                                <th>Discount</th>
                                <th>Loại Sản phẩm</th>
                                <th>Hình ảnh</th>
                                <th>Tình Trạng</th>
                                <th>Nhà cung cấp</th>
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var i in Model)
                            {
                            <tr>
                                <td>@stt</td>
                                <td>@i.ProductID</td>
                                <td>@i.ProductName</td>
                                <td>@i.Quantity</td>
                                <td>@string.Format("{0:0,0 VNĐ}", i.Price)</td>
                                <td>@i.CategoryID</td>
                                <td class="d-flex justify-content-center">
                                    <img src="@i.img" alt="hinh" class="img-fluid" style="width:100px ; height:80px" />
                                </td>
                                <td>@i.status</td>
                                <td>@i.Producer</td>
                                <td class="center">
                                    <a class="btn btn-success" href="#">
                                        <i class="halflings-icon white zoom-in"></i>
                                    </a>
                                    <a class="btn btn-info" href="#">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a class="btn btn-danger" href="#">
                                        <i class="halflings-icon white trash"></i>
                                    </a>
                                </td>
                            </tr> 
                          {stt++; }
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>


