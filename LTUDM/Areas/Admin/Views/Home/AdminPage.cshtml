
@{
    ViewBag.Title = "AdminPage";
    Layout = "~/Areas/Admin/Views/Shared/_Layou1.cshtml";
}

<div id="content" class="span10">



    <div class="row-fluid">
        <ul class="breadcrumb">
            <li>

                <i class="icon-home"></i>
                <i>Home</i>

            </li>

        </ul>

        <div class="row-fluid">
            <div class="box blue span12">
                <div class="box-header">
                    <h2><i class="halflings-icon white white hand-top"></i><span class="break"></span>Quick Buttons</h2>
                </div>
                <div class="box-content">

                    <a class="quick-button span2" href="@Url.Action("UserPage", "Home")">
