                        <p>Người dùng</p>

                    </a>

                    <a class="quick-button span2" href="@Url.Action("index", "Order")">
                        <i class="icon-shopping-cart"></i>
                        <p>Đơn đặt hàng</p>
                    </a>
                    <a class="quick-button span2" href="@Url.Action("Categories", "category")">
                        <i class="icon-barcode"></i>
                        <p>Loại sản phẩm</p>
                    </a>
                    <a class="quick-button span2" href="@Url.Action("Product", "Product")">
                        <i class="icon-barcode"></i>
                        <p>Sản Phẩm</p>
                    </a>
                    <a class="quick-button span2" href="@Url.Action("Productdel", "Product")">
                        <i class="icon-barcode"></i>
                        <p>Sản phầm ngừng KD</p>
                    </a>
                    <a class="quick-button span2" href="@Url.Action("Banner", "Home")">
                        <i class="icon-picture"></i>
                        <p>Ảnh màn hình chính</p>
                    </a>

                    <div class="clearfix"></div>
                </div>
            </div><!--/span-->

        </div><!--/row-->
    </div>
</div>


