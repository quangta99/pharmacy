@{
    ViewBag.Title = "UserPage";
    Layout = "~/Areas/Admin/Views/Shared/_Layou1.cshtml";
    @model List<LTUDM.Models.UserModel>
    int stt = 1;
}


<div id="content" class="span10">
    <div class="row-fluid">

        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <i>Home</i>
                <i class="icon-angle-right"></i>
            </li>
            <li><p>Người dùng</p></li>
        </ul>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon white user"></i><span class="break"></span>Người dùng</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-setting"><i class="halflings-icon white wrench"></i></a>
                        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                        <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên người dùng</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Tình trạng</th>  
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var i in Model)
                            {
                            <tr>
                                <td>@stt</td>
                                <td>@i.Name</td>
                                <td>@i.Email</td>
                                <td>@i.Phone</td>
                                @{ if (i.IsEmailVerfied == true)
                                    {
                                        <td class="btn-success">Đã kích hoạt tài khoản</td>
                                    }
                                    else
                                    {
                                        <td class="btn-warning">Chưa kích hoạt tài khoản</td>
                                    }
                                }
                                <td class="center">
                                    <a class="btn btn-success"  href="@Url.Action("DetailUser","Home", new { ID = i.Id.ToString() })">
                                        <i class="halflings-icon white zoom-in"></i>
                                    </a>
                                    
                                </td>
                            </tr>
                                { stt++; }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>


