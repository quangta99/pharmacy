@{
    ViewBag.Title = "Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layou1.cshtml";
    @model List<LTUDM.Models.OrderModel>
    int stt = 1;
    ViewBag.Pr = null;
}




<div id="content" class="span10">
    <div class="row-fluid">

        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                <i>Home</i>
                <i class="icon-angle-right"></i>
            </li>
            <li><p>Tất cả Sản Phẩm</p></li>
        </ul>

        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon white user"></i><span class="break"></span>Sản phẩm</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                        <a href="#" class="btn-close"><i class="halflings-icon white remove"></i></a>
                    </div>
                </div>
                <div class="box-content">

                   
                    <table class="table table-striped table-bordered bootstrap-datatable datatable">


                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt hàng</th>
                                <th>Tên người mua</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ giao hàng</th>
                                <th>Email</th>
                                <th>Ghi chú</th>
                                <th>Tình Trạng</th>
                              
                                <th>Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var i in Model)
                            {
                              
                            <tr>
                                <td>@stt</td>
                                <td>@i.OrderID</td>
                                <td class="text-warning" style="font-weight:bold">@i.OrderDate</td>
                                <td>@i.Name</td>
                                <td>@i.Phone</td>
                                <td>@i.Address</td>
                                <td>@i.Email</td>
                                <td>@i.Notes</td>

                                @if (i.OrderStatus == "Đang Kiểm tra")
                                {
                                    <td><p class="btn btn-primary">@i.OrderStatus</p></td>
                                }
                                else if (i.OrderStatus == "Đang vận chuyển")
                                {
                                    <td><p class="btn btn-warning">@i.OrderStatus</p></td>
                                }
                                else
                                {
                                    <td><p class="btn btn-success">@i.OrderStatus</p></td>
                                }

                                <td class="center">


                                    <a class="btn btn-success" href="@Url.Action("Detail", "Order", new { ID = i.OrderID })">
                                        <i class="halflings-icon white zoom-in"></i>
                                    </a>

                                </td>
                            </tr>
                                    { stt++; }
                                
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>


