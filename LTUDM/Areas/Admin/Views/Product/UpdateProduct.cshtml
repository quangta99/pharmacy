@{
    ViewBag.Title = "CreatProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layou1.cshtml";
    @model LTUDM.Models.ProductModel
}



<div id="content" class="span10">

    @using (Html.BeginForm("UpdateProduct2", "Product", FormMethod.Post))
    {
        <div class="row-fluid sortable">
            <div class="box span12">
                <div class="box-header" data-original-title>
                    <h2><i class="halflings-icon white edit"></i><span class="break"></span>Update Product</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-up"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form class="form-horizontal">
                        <fieldset>
                          
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>ID</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control disabled" style="width:500px" name="ID" value="@Model.ProductID" readonly placeholder="@Model.ProductID">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Tên</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" style="width:500px" name="name" placeholder="@Model.ProductName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Giá bán</strong></label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" style="width:500px" name="price" placeholder="@Model.Price">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Giảm giá</strong></label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" style="width:500px" name="discount" placeholder="@Model.discount %">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Giới thiệu</strong></label>
                                <div class="col-sm-9">
                                    <textarea type="text" class="form-control" style="width:500px" name="description" placeholder="@Model.Description"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Số lượng</strong></label>
                                <div class="col-sm-9">
                                    <input type="number" class="form-control" style="width:500px" name="quantity" placeholder="@Model.Quantity">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Nhà cung cấp</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" style="width:500px" name="Producer" placeholder="@Model.Producer">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Hình sản phẩm 1</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" style="width:500px" name="img1" placeholder="@Model.img[0]">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Hình sản phẩm 2</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" style="width:500px" name="img2" placeholder="@Model.img[1]">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label" for="card-holder-name"><strong>Hình sản phẩm 3</strong></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" style="width:500px" name="img3" placeholder="@Model.img[2]">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-primary">Thay đổi</button>
                                </div>
                            </div>

                        </fieldset>
                    </form>

                </div>
            </div><!--/span-->

        </div><!--/row-->
    }
</div>
